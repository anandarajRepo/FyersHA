# Fyers API Configuration
FYERS_CLIENT_ID=your_client_id_here
FYERS_SECRET_KEY=your_secret_key_here
FYERS_ACCESS_TOKEN=your_access_token_here
FYERS_REFRESH_TOKEN=your_refresh_token_here

# Paper Trading Configuration
# Set to 'true' to enable paper trading mode (no real orders)
# Set to 'false' for live trading (real orders will be placed)
ENABLE_PAPER_TRADING=true
PAPER_TRADE_LOG_FILE=logs/paper_trades.log

# Portfolio Settings
PORTFOLIO_VALUE=100000
RISK_PER_TRADE=1.0
MAX_POSITIONS=3

# Heikin Ashi Strategy Parameters
HA_SMOOTHING=3
CONSECUTIVE_CANDLES=2

# Technical Indicators
ADX_PERIOD=14
ADX_THRESHOLD=25.0
ATR_PERIOD=14
ATR_MULTIPLIER=2.0
VOLUME_PERCENTILE=60.0

# Risk Management
STOP_LOSS_PCT=1.5
TARGET_MULTIPLIER=2.0
TRAILING_STOP_PCT=0.5
BREAKEVEN_PROFIT_PCT=1.0
ENABLE_TRAILING_STOPS=true

# Signal Filtering
MIN_CONFIDENCE=0.65
MIN_VOLUME_RATIO=1.5

# Position Management
ENABLE_PARTIAL_EXITS=true
PARTIAL_EXIT_PCT=50.0

# Timeframe
TICK_INTERVAL=1min

# System Settings
MONITORING_INTERVAL=1
POSITION_UPDATE_INTERVAL=5
LOG_LEVEL=INFO
WS_MAX_RECONNECT_ATTEMPTS=10
WS_PING_INTERVAL=30
WS_CONNECTION_TIMEOUT=30
